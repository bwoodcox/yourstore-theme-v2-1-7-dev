.amount-selector input, .cookie-selector input, .who-chooses-selector input {
  margin:0;
  padding:0;
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  display: none;
}
.dozen, .choices {
  display: block;
  width: 320px;
  height: 320px;
  text-decoration: none;
  position: relative;
  margin-left: auto;
  margin-right: auto;
  -webkit-transition: all 100ms ease-in;
  -moz-transition: all 100ms ease-in;
  transition: all 250ms ease-in;
  -webkit-filter: brightness(.9) grayscale(.4) opacity(.9);
  -moz-filter: brightness(.9) grayscale(.4) opacity(.9);
  filter: brightness(1) grayscale(.1) opacity(1);
  cursor: pointer;
  border-radius: 12px;
}
.dozen:hover, .cookie:hover, .choices:hover {
  -webkit-filter: none;
  -moz-filter: none;
  filter: none;
}
