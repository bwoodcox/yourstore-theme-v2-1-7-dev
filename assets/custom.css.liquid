.title-sides {
  position: relative;
  margin-bottom: 1.667em;
	display: inline-block;
	padding: 0 20px;
}
@media (min-width: 767px) {
	.title-sides:before, .title-sides:after {
		content: '';
		position: absolute;
		top: 50%;
		-webkit-transform: translateY(-50%);
		-moz-transform: translateY(-50%);
		-ms-transform: translateY(-50%);
		-o-transform: translateY(-50%);
		transform: translateY(-50%);
		width: 100px;
		height: 12px;
		background-color: {{ settings.color_baselinetitle }};
		z-index: 10;
	}
	.title-sides:before {
		right: 100%;
	}
	.title-sides:after {
		left: 100%;
	}
}
.banner .figcaption.overlay {
	background-color: rgba(41, 32, 60, 0.75);
	background-size: cover;
}
.product .product__inside__image:hover .product__action {
	visibility: visible;
	opacity: 1;
}
.product .product__inside__image:hover .product__overlay {
	visibility: visible;
	opacity: 1;
}
.product .product__inside__image:hover {
	cursor: pointer;
}
.product .product__action {
	display: block;
	position: absolute;
	top: 50%;
	-webkit-transform: translateY(-50%);
	-moz-transform: translateY(-50%);
	-ms-transform: translateY(-50%);
	-o-transform: translateY(-50%);
	transform: translateY(-50%);
	width: 100%;
	z-index: 100;
	visibility: hidden;
	opacity: 0;
	-webkit-transition: all 0.4s ease;
	-moz-transition: all 0.4s ease;
	transition: all 0.4s ease;
}
.product .product__action::after {
	clear: both;
	content: "";
	display: table;
}
.product .product__inside__image:hover .product__action li:nth-child(1) {
	-webkit-transition-delay: 0.05s;
	-moz-transition-delay: 0.05s;
	transition-delay: 0.05s;
}
.product .product__inside__image:hover .product__action li {
	visibility: visible;
	opacity: 1;
	-webkit-transform: translateY(0);
	-moz-transform: translateY(0);
	-ms-transform: translateY(0);
	-o-transform: translateY(0);
	transform: translateY(0);
}
.product .product__action li:nth-child(1) {
	-webkit-transform: translateY(100%);
	-moz-transform: translateY(100%);
	-ms-transform: translateY(100%);
	-o-transform: translateY(100%);
	transform: translateY(100%);
}
.product .product__action li {
	padding: 10px;
	display: inline-block;
	-webkit-transition: all 0.3s ease;
	-moz-transition: all 0.3s ease;
	transition: all 0.3s ease;
	visibility: hidden;
	opacity: 0;
}
.product .product__action a {
	position: relative;
	display: inline-block;
	width: 46px;
	height: 46px;
	-webkit-border-radius: 50%;
	-moz-border-radius: 50%;
	-ms-border-radius: 50%;
	border-radius: 50%;
	background-color: rgba({{ settings.color_quickview }});
	-webkit-transition: all 0.6s ease;
	-moz-transition: all 0.6s ease;
	transition: all 0.6s ease;
}
.product .product__action li:first-child a:before {
	left: 0;
	-webkit-transform: translate(0, -10px);
	-moz-transform: translate(0, -10px);
	-ms-transform: translate(0, -10px);
	-o-transform: translate(0, -10px);
	transform: translate(0, -10px);
}
.product .product__action a i {
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%) rotate(0deg);
	-moz-transform: translate(-50%, -50%) rotate(0deg);
	-ms-transform: translate(-50%, -50%) rotate(0deg);
	-o-transform: translate(-50%, -50%) rotate(0deg);
	transform: translate(-50%, -50%) rotate(0deg);
	font-size: 18px;
	line-height: 1em;
	color: #fff;
	-webkit-transition: all 0.6s ease;
	-moz-transition: all 0.6s ease;
	transition: all 0.6s ease;
	z-index: 30;
}
.product .product__inside__image ul {
	margin: 0;
	list-style-type: none;
	text-align: center;
	padding: 0;
}
.product .product__overlay {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: 10;
	background-color: rgba(255, 255, 255, 0.3);
	visibility: hidden;
	opacity: 0;
}
.product .product__inside__image img {
	-webkit-transform-style: flat;
	-moz-transform-style: flat;
	-ms-transform-style: flat;
	-o-transform-style: flat;
	transform-style: flat;
}
.product .product__action a:hover {
	background-color: {{ settings.color_base }};
	background-image: -webkit-linear-gradient(-360deg, {{ settings.color_base }}, #ff5858);
	background-image: linear-gradient(90deg, {{ settings.color_base }}, #ff5858);
}
.product .product__action a:hover:before, .product .product__action a:hover:after {
	visibility: visible;
	opacity: 1;
}
.product .product__action a:before, .product .product__action a:after {
	visibility: hidden;
	opacity: 0;
}
.product .product__action a:before {
	content: attr(data-tooltip);
	display: inline-block;
	position: absolute;
	bottom: 100%;
	left: 50%;
	-webkit-transform: translate(-50%, -10px);
	-moz-transform: translate(-50%, -10px);
	-ms-transform: translate(-50%, -10px);
	-o-transform: translate(-50%, -10px);
	transform: translate(-50%, -10px);
	font-family: "{{ settings.font_name_1 }}", sans-serif;
	font-size: 12px;
	line-height: 30px;
	color: #fff;
	min-width: 120px;
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
	-ms-border-radius: 4px;
	border-radius: 4px;
	background-color: rgba(0, 0, 0, 0.7);
}
.product .product__action a:after {
	content: '';
	position: absolute;
	left: 50%;
	top: -10px;
	-webkit-transform: translateX(-50%);
	-moz-transform: translateX(-50%);
	-ms-transform: translateX(-50%);
	-o-transform: translateX(-50%);
	transform: translateX(-50%);
	height: 0;
	width: 0;
	border-left: 7.5px solid transparent;
	border-right: 7.5px solid transparent;
	border-top: 7.5px solid rgba(0, 0, 0, 0.7);
}
.product__inside__price.price-box .money-suffix {
	display: inline-block;
	width: 20px;
	vertical-align: top;
	line-height: 1.125em;
	font-size: 0.4em;
