<section class="{% unless section.settings.hide_top_indent %}content {% endunless %}fullwidth indent-col-none" data-section-id="{{ section.id }}" data-section-type="banners-section">
  <div class="container">
    {% if section.blocks.size > 0 %}
    <div class="row">
      {% for block in section.blocks limit: section.blocks.size %}
      <!--div class="col-md-6"-->
        <div class="info-banner">
          <div class="figure img">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url: '720x' }}"
              data-src="{{ img_url }}"
              data-widths="[180, 360, 540, 720, 900, 1080]"
              data-aspectratio="4:3"
              data-sizes="auto"
              data-parent-fit="cover"
              alt="{{ block.settings.image.alt }}">
            {% else %}<span class="editor-image" data-width="1024" data-height="855" data-position="top"></span>
          	{% endif %}
          </div>
          <div class="description">
            <div class="block-title">{{ block.settings.text1 }}</div>
            {{ block.settings.text2 }}
            <a href="{{ block.settings.link }}" class="btn btn--ys btn-lg text-uppercase btn--xl">{{ section.settings.link_name }}</a>
          </div>
        </div>
      <!--/div-->
      {% cycle "", "<div class='clearfix'></div>" %}
      {% endfor %}
    </div>
    {% else %}
    <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Info Banner",
  "class": "index-section",
  "max_blocks": 12,
  "settings": [
    {
      "type": "checkbox",
      "id": "hide_top_indent",
      "label": "Hide Top Indent",
      "default": true
    },
    {
      "type": "text",
      "id": "link_name",
      "label": "Link Name",
      "default": "Read more"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional"
        },
        {
          "type": "text",
          "id": "text1",
          "label": "Text 1",
          "default": "Natural<br>Skin Care"
        },
        {
          "type": "textarea",
          "id": "text2",
          "label": "Text 2",
          "default": "<p>Donec eros tellus, scelerisque nec, rhoncus eget, laoreet sit amet, nunc. Ut sit amet turpis. In est arcu, sollicitudin eu, vehicula venenatis<\/p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Info Banner",
      "category": "Banner",
      "blocks": [
        {
          "type": "item"
        },
        {
          "type": "item"
        }
      ]
    }
  ]
}
{% endschema %}
