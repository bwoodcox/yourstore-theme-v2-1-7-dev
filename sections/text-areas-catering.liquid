<section class="content{% unless section.settings.top_indent %} nomargin{% endunless %}" data-section-id="{{ section.id }}">
  <div class="container-fluid">
    <div class="row">
      {% if section.blocks.size > 0 %}
        <div class="text-custom text-block-with-bg">
          {% if section.show_heading %}<h2 class="text-center text-uppercase title-under">{{ section.settings.title }}</h2>{% endif %}
          {% for block in section.blocks limit: section.blocks.size %}
            <h3 class="text-uppercase title-sides">{{ block.settings.section_title }}</h3>
            {{ block.settings.content }}
          {% endfor %}
        </div>
      {% else %}
          <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
      {% endif %}
    </div>
  </div>
</section>
<style>
  [data-section-id~="{{ section.id }}"] {
  background: {{ section.settings.bg_base_color }};
  }
</style>

