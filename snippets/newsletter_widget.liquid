{% if settings.mailchimp_form_action != "" %}
<h4 class="mobile-collapse__title">{{ "newsletter.general.title" | t }}</h4>
<p>Sign up to get exclusive offers and news. Of course, we promise we only send super fun emails!</p>
<div class="mobile-collapse__content">
  <form action="{{ settings.mailchimp_form_action }}" method="post" name="mc-embedded-subscribe-form" target="_blank" class="form-inline">
    <input type="text" name="EMAIL" class="subscribe-form__input">
    <button type="submit" class="btn btn--ys btn--xl" style="margin-left: 10px;">{{ "newsletter.general.button" | t }}</button>
  </form>
</div>
{% else %}
<strong><u><a href="{{ shop.url }}/admin/themes">
  Add newsletter redirect link in:<br>
  Customize Theme / General Settings / Newsletter / MailChimp form action URL
  </a></u></strong>
{% endif %}
